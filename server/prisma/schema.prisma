// schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  username  String   @unique
  password  String
  programs  Program[]
}

model Program {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  slug      String @unique
  diet      Json
  overview  Json
  workout   Json
  userId    String @db.ObjectId
  user      User   @relation(fields: [userId], references: [id])
}